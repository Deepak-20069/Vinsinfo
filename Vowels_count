package day02;

public class Sample7 {
	public static void main(String []args) {
		String a="hello";
		System.out.println(countofvowels(a));
	}
	static int countofvowels(String str) {
		int count=0;
		 str = str.toLowerCase();

	        for (int i = 0; i < str.length(); i++) {
	            char ch = str.charAt(i);
	            if ("aeiou".contains(ch+"")) {
	                count++;
	            }
	        }
		return count;
		
	}
	
}
